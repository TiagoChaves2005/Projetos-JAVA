/**
 *
 * @author Tiago Moura Chaves
 */
public class Mucarela implements Pizza {
    
    @Override
    public void montar() {
        System.out.println("Pizza Muçarela");
        System.out.println("Molho de tomate, muçarela, farinha de trigo, sal, fermento, água morna, óleo, açúcar, azeitona");
    }

    @Override
    public void assar() {
        System.out.println("Tempo de forno: 30 min");
    }

    @Override
    public void cobrar() {
        System.out.println("Preço: R$ 80,00");
    }
    
}//Fim da classe
