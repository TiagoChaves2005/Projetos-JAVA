/**
 *
 * @author Tiago Moura Chaves
 */
public class Pao implements Pizza {
    
    @Override
    public void montar() {
        System.out.println("Pão");
        System.out.println("Farinha de trigo, fermento, ovos, açúcar, sal, água morna, leite");
    }
    
    @Override
    public void assar() {
        System.out.println("Tempo de forno: 30 minutos");
    }
    
    @Override
    public void cobrar() {
        System.out.println("Preço: R$ 30,00");
    }
    
}
