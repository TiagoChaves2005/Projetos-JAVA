 * @author Tiago Moura Chaves
 */
public class Calabresa implements Pizza {
    
    @Override
    public void montar() {
        System.out.println("Pizza Calabresa");
        System.out.println("Molho de tomate, calabresa, cebola, farinha de trigo, sal, fermento, água morna, óleo, açúcar, azeitona");
    }

    @Override
    public void assar() {
        System.out.println("Tempo de forno: 30 min");
    }

    @Override
    public void cobrar() {
        System.out.println("Preço: R$ 34,00");
    }
    
}//Fim da classe
