public class Torta implements Pizza {
    
    @Override
    public void montar() {
        System.out.println("Torta de Frango");
        System.out.println("Farinha de trigo, fermento, caldo de galinha, sal, tomate, alho, cebola, ovo");
    }
    
    @Override
    public void assar() {
        System.out.println("Tempo de forno: 40 minutos");
    }
    
    @Override
    public void cobrar() {
        System.out.println("Pre√ßo: R$ 22,00");
    }
    
}
