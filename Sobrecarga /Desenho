public class Desenho {
    
    public static void main(String[] args) {
        Figura f1 = new Figura(500);
        Figura f2 = new Figura(10, 35);
        Figura f3 = new Figura(23, 34, 54);
        Figura f4 = new Figura(23, 34, 54, 98);
        
        f2.exibirFigura("ww", 1.5f);
        f1.exibirFigura(222);
        f3.exibirFigura("w", 10, 20);
        f4.exibirFigura("w", 10, 20, 30);

    }//Fim do main
